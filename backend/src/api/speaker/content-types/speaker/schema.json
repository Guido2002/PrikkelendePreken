{
  "kind": "collectionType",
  "collectionName": "speakers",
  "info": {
    "singularName": "speaker",
    "pluralName": "speakers",
    "displayName": "Spreker",
    "description": "Sprekers voor Prikkelende Preken"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "bio": {
      "type": "text"
    },
    "sermons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sermon.sermon",
      "mappedBy": "speaker"
    }
  }
}
