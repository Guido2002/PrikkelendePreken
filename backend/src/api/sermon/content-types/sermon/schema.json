{
  "kind": "collectionType",
  "collectionName": "sermons",
  "info": {
    "singularName": "sermon",
    "pluralName": "sermons",
    "displayName": "Sermon",
    "description": "Preken / sermons voor het archief"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "maxLength": 500
    },
    "content": {
      "type": "richtext"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "bibleText": {
      "type": "string",
      "maxLength": 255
    },
    "audio": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["audios"]
    },
    "speaker": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::speaker.speaker",
      "inversedBy": "sermons"
    },
    "themes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::theme.theme",
      "inversedBy": "sermons"
    }
  }
}
